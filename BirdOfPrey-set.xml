<PropertyList>

 <sim>

  <description>Klingon Bird of Prey</description>
  <author>Dave Culp</author>
  <status>beta</status>

  <flight-model>ufo</flight-model>

  <startup>
<!--  -->
  </startup>

  <sound>
<!--  -->
  </sound>

  <submodels> 
<!--  -->
  </submodels>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <model>
   <path>Aircraft/BoP/Models/bop.xml</path>
  </model>

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <pitch-offset-deg>-5.0</pitch-offset-deg>
    <x-offset-m archive="y">0</x-offset-m>
    <y-offset-m archive="y">0</y-offset-m>
    <z-offset-m archive="y">50</z-offset-m>
   </config>
  </view>

  <help>
   <title>Bird of Prey</title>
   <key>
    <name>c (lower case c) </name>
    <desc>Toggle Cloaking Device</desc>
   </key>
  </help>

  <multiplay>
    <generic>
       <float n="0"> 1.0 </float>
    </generic>
  </multiplay>

</sim>


 <input>
   <keyboard>

    <key n="99">
     <name>c</name>
     <desc>toggle cloaking</desc>
     <binding>
       <command>property-toggle</command>
       <property>/sim/multiplay/generic/float[0]</property>
     </binding>
    </key>

   </keyboard>
 </input>


 <nasal>
 </nasal>


</PropertyList>
